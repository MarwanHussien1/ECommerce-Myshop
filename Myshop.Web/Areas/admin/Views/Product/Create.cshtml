@model ProductVm

@{
	ViewBag.PageTitle = "Product Managment";
	ViewBag.CardTitle = " Add Product";
	Layout = "_Dashboard";

}
<div class="row justify-content-center mt-4">
    <!-- Form Column -->
    <div class="col-md-6">
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-header bg-primary text-white text-center">
                <h4>Create Product</h4>
            </div>
            <div class="card-body">
                <form method="post" asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- Product Name -->
                    <div class="mb-3">
                        <label asp-for="Product.Name" class="form-label fw-bold"></label>
                        <input asp-for="Product.Name" class="form-control" placeholder="Enter product name" />
                        <span asp-validation-for="Product.Name" class="text-danger"></span>
                    </div>

                    <!-- Product Description -->
                    <div class="mb-3">
                        <label asp-for="Product.Description" class="form-label fw-bold"></label>
                        <textarea asp-for="Product.Description" class="form-control" rows="3" placeholder="Enter product description"></textarea>
                        <span asp-validation-for="Product.Description" class="text-danger"></span>
                    </div>

                    <!-- Product Price -->
                    <div class="mb-3">
                        <label asp-for="Product.Price" class="form-label fw-bold"></label>
                        <input asp-for="Product.Price" class="form-control" placeholder="Enter price" />
                        <span asp-validation-for="Product.Price" class="text-danger"></span>
                    </div>

                    <!-- Product Image Upload -->
                    <div class="mb-3">
                        <label asp-for="Product.Img" class="form-label fw-bold"></label>
                        <input type="file" name="file" id="imgfile" class="form-control" onchange="fillimg(event);" />
                    </div>

                    <!-- Category Select -->
                    <div class="mb-3">
                        <label asp-for="Product.CategoryId" class="form-label fw-bold"></label>
                        <select asp-for="Product.CategoryId" class="form-select" asp-items="Model.CategoryList">
                            <option disabled selected>___ SELECT Category ___</option>
                        </select>
                        <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                    </div>

                    <!-- Buttons -->
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">Back to Index</a>
                        <button type="submit" class="btn btn-success px-4">Create</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Image Preview Column -->
    <div class="col-md-4">
        <div class="card shadow-sm border-0 rounded-3 text-center">
            <div class="card-header bg-light fw-bold">
                Image Preview
            </div>
            <div class="card-body">
                <img src="~/@Model.Product.Img" alt="@Model.Product.Name"
                     class="img-fluid rounded" id="ImagePreview"
                     style="max-height: 250px; object-fit: contain;" />
            </div>
        </div>
    </div>
</div>


@section Scripts {
	<partial name="_ValidationScriptsPartial" />

}

<script>

	var fillimg = function(event){
		var imgholder = document.getElementById("ImagePreview");
		imgholder.src = URL.createObjectURL(event.target.files[0]);
	}

</script>